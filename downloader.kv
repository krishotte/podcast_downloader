#:kivy 1.10.0
<MainV>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.05
        Button:
            text: 'refresh'
            #size_hint_y: 0.07
            on_release: app.rvidg.refresh()
        Button:
            text: 'download'
            #size_hint_y: 0.07
            on_release: app.rvidg.download()
    #Item1:
<SelLabel>:
    idx: 0
    selected: False
    text: str(self.idx)
    size_hint_x: 0.1
    canvas.before:
        Color:
            rgba: (0.3, 0.3, 0.8, 1) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
<Item1>:
    orientation: 'horizontal'
    size_hint_y: None
    size: (24, 48)
    text: 'abc'
    act: False
    idx: 0
    Label:
        text: root.text
        font_size: '12sp'
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        padding: (dp(8), dp(6))
        size_hint_x: 0.92
    #CheckBox:
    #    size_hint_x: 0.1
        #active: root.act
        #on_state: root.on_touch_down2() 
    Label:
        text: str(root.idx)
        font_size: '12sp'
        size_hint_x: 0.08
        id: slabel
        canvas.before:
            Color:
                rgba: (0.09, 0.53, 0.71, 1) if root.selected else (0, 0, 0, 1)
            Rectangle:
                pos: self.pos
                size: self.size

#<MyRecycleBoxLayout>:

<RV>:
    size_hint_y: 0.83
    viewclass: 'Item1' #'Label'
    #RecycleBoxLayout:
    MyRecycleBoxLayout:
        size_hint_y: 0.86
        default_size: None, dp(48)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True
    
