#:kivy 1.10.0
<MainV>:
    orientation: 'vertical'
    name: ''
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.05
        Button:
            text: 'refresh'
            #size_hint_y: 0.07
            on_release: app.mainvidg.refresh() #app.rvidg.refresh()
        Button:
            text: 'download'
            #size_hint_y: 0.07
            on_release: app.mainvidg.download() #app.rvidg.download()
    Label:
        text: root.name
        size_hint_y: 0.03
        canvas.before:
            Color:
                rgba: (0.2, 0.2, 0.2, 1)
            Rectangle:
                pos: self.pos
                size: self.size
    Carousel:
        id: kv_carousel
        size_hint_y: 0.92
        on_index: root.name_update() #print('index changed')
<Item1>:
    orientation: 'horizontal'
    size_hint_y: None
    size: (24, 48)
    text: 'abc'
    act: False
    idx: 0
    Label:
        text: root.text
        font_size: '12sp'
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        id: title1
        padding: (dp(8), dp(6))
        size_hint_x: 0.8 #0.92
    Label:
        text: root.duration
        font_size: '9sp'
        text_size: self.size
        halign: 'right'
        valign: 'middle'
        padding: (dp(4), dp(6))
        size_hint_x: 0.12
    RelativeLayout:
        size_hint_x: 0.08
        id: slabel
        Label:
            text: str(root.idx)
            font_size: '12sp'
            #size_hint_x: 0.08
            #id: slabel
            canvas.before:
                Color:
                    rgba: (0.09, 0.53, 0.71, 1) if root.selected else (0, 0, 0, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            id: indicator
            size_hint: (None, None)
            size: (dp(6), dp(6))
            pos_hint: {'right':0.95, 'top':0.85}
            canvas.before:
                Color:
                    rgba: (0, 1, 0, 0.5) if root.saved else (0, 0, 0, 0)
                Rectangle:
                    pos: self.pos
                    size: self.size
        Label:
            id: download_progress_
            text: root.download_progress
            size_hint_y: None
            size: (self.texture_size[0]+4, self.texture_size[1]+2)
            pos_hint_y: 0.1
            font_size: '9sp'
            color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: (0.87, 0.68, 0.16, 1) if self.text is not '' else (0, 0, 0, 0)
                Rectangle:
                    pos: self.pos
                    size: self.size
#<MyRecycleBoxLayout>:
<RV>:
    #size_hint_y: 0.95 #0.83
    viewclass: 'Item1' 
    MyRecycleBoxLayout:
        default_size: None, dp(48)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True
<DescriptionWindow>:
    orientation: 'vertical' 
    size_hint_x: 0.75
    size_hint_y: 0.9
    pos_hint: {'top': 0.95, 'x':0.05}
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        Label:
            text: 'Description'
            size_hint_x: 0.8
            canvas.before:
                Color:
                    rgba: (0.2, 0.2, 0.4, 1) 
                Rectangle:
                    pos: self.pos
                    size: self.size  
        Button:
            text: 'Close'
            size_hint_x: 0.2 
            on_release: root.close_window() 
    Label:
        text: root.description
        font_size: '12sp'
        size_hint_y: 0.9
        valign: 'top'
        padding: (sp(10), sp(10))
        text_size: self.size
        id: description_label
        canvas.before:
            Color:
                rgba: (0.2, 0.2, 0.25, 1) 
            Rectangle:
                pos: self.pos
                size: self.size  
